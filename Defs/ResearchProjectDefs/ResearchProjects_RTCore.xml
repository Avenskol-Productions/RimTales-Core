  <ResearchProjectDef>
    <defName>RTCore_Neolithic_Crafting</defName>
    <label>basic crafting</label>
    <description>Craft general equipment on the ground.</description>
	<tab>RTCore_Research</tab>
    <baseCost>250</baseCost>
    <techLevel>Neolithic</techLevel>
    <tags>
      <li>ClassicStart</li>
	  <li>TribalStart</li>
    </tags>
    <researchViewX>0.0</researchViewX>
    <researchViewY>0.0</researchViewY>
    <generalRules>
      <rulesStrings>
        <li>subject->neolithic crafting</li>
        <li>subject_story->find a spot to craft their equipment.</li>
        <li>subject_gerund->crafting neolithic general equipment</li>
      </rulesStrings>
    </generalRules>
  </ResearchProjectDef>

